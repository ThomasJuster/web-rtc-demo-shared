{
  "compilerOptions": {
    "target": "ES2019",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "Node",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "outDir": "./build",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/",
  ],
  "exclude": [
    "node_modules"
  ]
}
